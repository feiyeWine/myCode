package cn.ThreadPro;

public class Player implements Runnable{
    private Movie m = new Movie();
    
    public Player(Movie m) {
	super();
	this.m = m;
    }

    @Override
    public void run() {
	for(int i = 0;i<20;i++){
	    if(0==i%2){
	   m.play("×óÇàÁú");
	    }
	    else{
		m.play("ÓÒ°×»¢");
	}
	}
        
    }
}
